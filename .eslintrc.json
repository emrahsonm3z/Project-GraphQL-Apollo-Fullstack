{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "no-use-before-define": ["error", { "functions": false}],
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
    "allowAllPropertiesOnSameLine": false,
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5",
      "semi": false
    }]
  }
}
